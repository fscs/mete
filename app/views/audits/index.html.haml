- model_class = Audit
- content_for :actions do
  %li

= form_tag({}, { :class => 'form-horizontal', :method => :get }) do
  .control-group
    = label_tag :end_date, "from", class: 'control-label'
    %input{:type => "datetime-local", :name => "start_date", :value => @start_date.strftime('%FT%R')}
  .control-group
    = label_tag :end_date, "until", class: 'control-label'
    %input{:type => "datetime-local", :name => "end_date", :value => @end_date.strftime('%FT%R')}
  - unless @user.nil?
    %input{:type => "hidden", :name => "user", :value => @user.id}
  .control-group
    .controls
      %button.btn.btn-primary
        Filter



%p
  %strong Cash Register Balance:
  = @sum

%p
  %strong Bank Register Balance:
  = @bank_difference

%p
  %strong
    = "Showing data from #{@start_date} to #{@end_date} for "
    = @user.nil? ? "all users" : "user #{@user.name}"
    \:

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th Timestamp
    %th Bank Difference
    %th Cash Register Difference
    %th Drink
  - @audits.each do |audit|
    - if audit.difference > 0
      %tr.success
        %td= audit.created_at
        %td
          = show_amount audit.bank_difference
        %td
          = show_amount audit.difference
        %td
          = drink_name audit.drink
    - else
      %tr.error
        %td= audit.created_at
        %td
          = show_amount audit.bank_difference
        %td
          = show_amount audit.difference
        %td
          = drink_name "n/a"
