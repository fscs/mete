- [0.01, 0.02, 0.05, 0.1, 0.2, 0.5, 1, 2, 5, 10, 20, 50].reverse.each do |amount|
  - path = bill_path_generate(action, @user, amount, local_assigns.fetch(:target, nil)) if @user
  .col-xs-12.col-sm-4.col-md-3.col-lg-2
    = link_to(path, method: :patch) do
      .panel.panel-default.text-center
        .panel-body
          = image_tag "euro-#{amount}.png", alt: show_amount(amount), height: "75px"
        .panel-footer
          = bill_sign(action)
          = show_amount amount
