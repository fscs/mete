<!-- Modal -->

- model_class = User
- content_for :actions do
  %li
    = link_to 'edit user', edit_user_path(@user)
  - if @user.audit?
    %li
      = link_to 'show logs', audits_path(:user => @user)
  %li
    = link_to 'delete user', @user, :method => :delete, :data => {:confirm => "Really delete #{@user.name}â€™s account?"}
.page-header
  %h1
    = "Hi, #{@user.name}"
    %small
      Pick Your Poison.

.row
  .col-xs-3.col-sm-2.col-md-1
    = gravatar(@user)
  /TODO smaller screens
  .col-md-3
    %dl.dl-horizontal
      %dt
        = model_class.human_attribute_name(:email)
      %dd
        = @user.email
      %dt
        = model_class.human_attribute_name(:balance)
      %dd
        = show_amount @user.balance
  .col-md-2
    = link_to(deposit_user_path(@user)) do
      .panel.panel-default.text-center
        .panel-body
          = image_tag "money-bag-green.png", size: "64x64", alt: 'deposit'
        .panel-footer
          Deposit Money
  .col-md-2
    = link_to(retrieve_user_path(@user)) do
      .panel.panel-default.text-center
        .panel-body
          = image_tag "money-bag-red.png", size: "64x64", alt: 'retrieve'
        .panel-footer
          retrieve Money
%hr

%form{:method => "POST", :action => buy_barcode_user_path}
  %small
    Buy a drink by scanning a barcode: 
  %input{:name => "barcode"}

%hr

.row.drinks
  = render @drinks, :locals => {:user => @user}
